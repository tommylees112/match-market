<div id="makeBet" class="modal fade" role="dialog">
  <div class="modal-dialog">

    <!-- Modal content-->
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal">&times;</button>
        <h4 class="modal-title">Make this Bet: <%= odd_selected.outcome.capitalize %></h4>
        <h4><%= @match.home_team %> v. <%= @match.away_team %></h4>
      </div>
      <div class="modal-body">
        <%= simple_form_for [@match, odd_selected, @booking] do |f| %>
          <%= f.input :stake  %>
          <%= f.submit%>
        <% end %>
      </div>
    </div>

  </div>
</div>


