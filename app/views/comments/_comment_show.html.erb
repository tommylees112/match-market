

<div class="comment">
  <%= image_tag comment.user.facebook_picture_url ? comment.user.facebook_picture_url : "logo.png", class: "avatar-small creator-avatar" %>
  <div class="comment-name">
    <p> <%= comment.user.user_name %> </p>
    <p> <%= comment.created_at.strftime('%l:%M %p') %></p>
  </div>
  <div class="comment-body">
    <p>
       <%= comment.content %>
    </p>
  </div>
</div>



