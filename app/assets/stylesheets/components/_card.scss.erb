a:hover {
  text-decoration:none;
}



.card {
  height: 300px;

  margin-left: 10px;
  margin-right: 10px;
  background-color: transparent;
  position: relative;
  transition: 0.4s;
  color:white;
  padding: 20px;
  background: url("<%= asset_path 'ball.png' %>") no-repeat center center fixed;

  background-size: cover;
  background-position: center;
  box-shadow: 3px 4px 18px 1px rgba(0,0,0,0.45);
  margin-bottom: 15px;
  margin-top: 20px;
  opacity: 0.9;
 &:hover {
    opacity: 1.2;
    transform: scale(1.1);
    text-decoration: none;
    cursor: pointer;

    border: 1px solid $green;

  }
  .card-teams {
    display: flex;
    justify-content: space-between;
    align-items: center;
    .t-shadow {
      text-shadow: 0 2px 3px rgba(0,0,0,0.6);
    }
    h5 {
      font-size:20px;
      text-shadow: 0 1px 3px rgba(0,0,0,0.6);
      display: flex;
      align-items:center;
      height:55px;
      justify-content: center;
      &:hover {
        text-decoration: none;
      }
    }

    .team-logo {
      height: 50px;
    }
  }

  .stadium-logo {
    width: 50px;
  }

  .left-team, .right-team {
    width:45%;
    align-self: flex-start;
    margin: 0px 10px;
    text-align: center;
  }

  .card-date {
    text-align:center;
    font-size:20px;
    text-shadow: 0 2px 3px rgba(0,0,0,0.6);
    margin-bottom: 10px;
  }

  .card-stadium {
    text-align:center;
    font-size:22px;
    text-shadow: 0 2px 3px rgba(0,0,0,0.6);
  }


  .status {
    position:absolute;
    bottom: 16px;
    text-shadow: 0 2px 3px rgba(0,0,0,0.6);
  }
}

