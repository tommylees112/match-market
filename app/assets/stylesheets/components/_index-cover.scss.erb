.main-container {
  background-image: linear-gradient(-180deg, rgba(234, 82, 111, 0.43) 7%, rgba(244, 244, 244, 0.43) 38% ), url('<%= asset_path("index-cover.png") %>');
  color: white;
  text-align: center;
  font-family: $main-container-font;
  height: 100vh;
  // /* if you have a 70px navbar => height: calc(100vh - 70px); */
  background-size: cover !important;
  display: flex;
  align-items: center;
  justify-content: center;

  h1 {
  font-size: 50px;
  font-weight: lighter;
  text-shadow: 0px 1px rgba(0, 0, 0, 0.2);
 }
 p {
  font-size: 25px;
  font-weight: lighter;
  color: rgb(255, 255, 255);
  opacity: 0.6;
  margin-bottom: 30px;
 }
}

.wrapper-main {
  background-image: linear-gradient(-180deg, rgba(234, 82, 111, 0.43) 7%, rgba(244, 244, 244, 0.43) 38% ), url('<%= asset_path("index-cover.png") %>');
  background-size: cover;
  background-position: center;
  min-height: 100vh;
}


.cover-content {
  text-align:center;
}
