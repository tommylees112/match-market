   bottom:0px;
   width:100%;
   height:0px;
   p {
    color: rgba(0,0,0,0.8);
   }
  }

  .this-page {
    background: -webkit-linear-gradient(left, $dark-blue 35%, $gray 76%, $red 24%);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
  }



.fa1{
  color: $dark-blue;
}
.fa2{
  color: $gray;
}

.fa3 {
  color: $red;
}

.fa-heart {
  color: $red;
}
  h1{
    margin:auto;
    line-height:51px;
    vertical-align:middle;
    margin-bottom: 50px;
