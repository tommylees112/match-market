.odds-container {
  margin: 0 auto;
  padding:0px;
  width: 100%;
}


.oddscard {
  background: url("<%= asset_path 'test4.png' %>") no-repeat center center fixed;
  background-size: cover;
  background-position: center;
  text-align: center;
  height: 150px;
  text-shadow: 0 1px 3px rgba(0,0,0,0.6);
  position: relative;
  transition: 0.4s;
  color:white;


  margin-bottom: 15px;
  margin-top: 20px;
  box-shadow: 2px 2px 2px 2px rgba(0, 21, 33, 0.6);
 &:hover {
    opacity: 0.7;
    transform: scale(1.1);
    text-decoration: none;

  }


  .card-category {
    position: absolute;
    top: 50%;
    left: 5px;
  }

  .card-description {
    position: absolute;
    width: 50px;
    top:1px;
    right: 10px;

  }



  .card-avatar {
    height: 50px;
    width: 50px;
    background-size: cover;
    border-radius: 50%;
    box-shadow: 1px 1px 1px 1px rgba(0, 21, 33, 0.6);
    position:absolute;
    left: 5px;
    top: 5px;
  }

  .betmaker {
    color: white;
    position: absolute;
    bottom: 20px;
    right: 30%;

    border-radius: 30px;
    background-color:transparent;
    border-color: $green;
    color: $dark-blue;
    font-family: 'Quicksand';
    font-weight: lighter;

    &:hover {
      cursor: pointer;
      background-color:rgba(80, 255, 177, 1);
    }
  }
}



